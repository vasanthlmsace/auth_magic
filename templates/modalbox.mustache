{{!
    @template auth_magic/modalbox

    Display the confirm box.

    Example context (json):
    {
        "profileurl": "https://example.com/"
        "username" : "demouser",
        "coursename": "course 1",
    }

}}
<div class="auth-magic-block">
    <p> <a href="{{profileurl}}">{{username}} </a> {{#str}}hasbeencreated, auth_magic{{/str}}
        {{#coursename}} {{#str}} strenrolinto, auth_magic {{/str}}"{{coursename}}" {{/coursename}}</p>
    <div class="magic-link-block">
        <span>{{#str}} magiclink, auth_magic{{/str}}</span>
        <input type="text" id="copy-text" value="{{magicinvitation}}" size="60">
        <div class="copy-link-block">
            <button class="btn btn-primary" id="copy-cliboard">{{#str}}copyboard, auth_magic{{/str}}</button>
        </div>
    </div>
</div>